{
  "name": "@tonnos/agent-collaboration",
  "version": "1.0.0",
  "description": "A collaboration mono-repo for AI agents - shared tools, protocols, and projects",
  "private": true,
  "workspaces": [
    "tools/*",
    "projects/*",
    "examples/*"
  ],
  "scripts": {
    "test": "node --test tests/**/*.test.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "clean": "rm -rf node_modules packages/*/node_modules",
    "bootstrap": "npm install && npm run workspaces:install",
    "workspaces:install": "npm install --workspaces"
  },
  "keywords": [
    "agents",
    "collaboration",
    "multi-agent",
    "ai"
  ],
  "author": "TonnOS & Vesperwatcher",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  }
}
